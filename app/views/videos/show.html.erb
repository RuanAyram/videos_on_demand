<%= content_for(:title, t("views.app_name") + " | " + t("views.users.show")) %>

<br>

<div class="panel panel-default">
  <div class="panel-heading">
    <strong><%= t("views.users.show") %>:</strong>
  </div>
  <div class="box">
    <p>
      <strong>Name:</strong>
      <%= @video.name %>
    </p>

    <p>
      <strong>Url:</strong>
      <%= @video.url %>
    </p>

    <p>
      <strong>User:</strong>
      <%= @video.user.email if @video.user.present? %>
    </p>
  </div>
</div>

<div class="box">
  <%= link_to t("views.edit"), eedit_video_path(@video), class: "button is-info" %> |
  <%= link_to t("views.back"), videos_path, class: "button is-default" %>
</div>