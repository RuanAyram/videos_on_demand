<%= content_for(:title, t("views.app_name") + " | " + t("views.videos.show")) %>

<div class="container is-fluid">
  <br>

  <div class="panel panel-default">
    <div class="panel-heading">
      <strong><%= t("views.videos.show") %>:</strong>
    </div>
    <div class="box">
      <div class="columns">
        <div class="column is-full">
          <video-js id=vid1 width="100" height="320" class="vjs-default-skin" controls>
            <source src="<%= @video.url %>" type="application/x-mpegURL">
          </video-js>
        </div>
      </div>

      <div class="columns">
        <div class="column is-6">
          <%= @video.name %>
        </div>
        <div class="column is-6">
          <span class="tag is-success is-medium"><%= pluralize(@all_views, 'view', 'views') %></span>
        </div>
      </div>

      <hr>

      <div class="columns">
        <div class="column is-full">
          <%= @video.user.email if @video.user.present? %>
        </div>
      </div>
    </div>
  </div>

  <div class="box">
    <% if can? :update, @video %>
      <%= link_to t("views.edit"), edit_video_path(@video), class: "button is-info" %> |
    <% end -%>
    <%= link_to t("views.back"), videos_path, class: "button is-default" %>
  </div>
</div>
