<div id="login">
  <div class="login-card">

    <div class="card-title">
      <h1><%= t('views.app_name')%> - Ãrea restrita</h1>
    </div>

    <div class="content">
      <%= form_for(resource, as: resource_name, url: session_path(resource_name)) do |f| %>
        <%= f.email_field :email, autofocus: true, autocomplete: "email", id: "email", placeholder:"Email"%>
        <%= f.password_field :password, autocomplete: "current-password",  id:"password", placeholder: "Senha"%>
        <div class="level options">
          <% if devise_mapping.rememberable? -%>
              <div class="checkbox level-left">
                <%= f.check_box :remember_me %>
                <%= f.label :remember_me %>
              </div>
          <% end %>
          <%= link_to "Esqueceu sua senha?", new_password_path(resource_name), class: "btn btn-primary" %><br />
        </div>
        <div class="actions">
          <%= f.submit "Entrar", class: "btn-login btn-lg btn-primary"%>
        </div>
      <% end %>
    </div>
  </div>
</div>